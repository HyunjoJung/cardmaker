# build stage
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

# Copy solution and project files
COPY *.slnx ./
COPY src/BusinessCardMaker.Web/*.csproj ./src/BusinessCardMaker.Web/
COPY src/BusinessCardMaker.Core/*.csproj ./src/BusinessCardMaker.Core/
COPY tests/BusinessCardMaker.Tests/*.csproj ./tests/BusinessCardMaker.Tests/
COPY tests/BusinessCardMaker.E2ETests/*.csproj ./tests/BusinessCardMaker.E2ETests/

# Restore dependencies
RUN dotnet restore

# Copy everything else and build
COPY . .
RUN dotnet publish src/BusinessCardMaker.Web/BusinessCardMaker.Web.csproj -c Release -o /app/publish

# runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS final
WORKDIR /app
EXPOSE 5049
ENV ASPNETCORE_URLS=http://+:5049
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "BusinessCardMaker.Web.dll"]
