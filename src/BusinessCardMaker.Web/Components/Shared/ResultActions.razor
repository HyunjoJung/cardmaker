<div class="d-flex gap-2 mt-4 justify-content-center">
    <button class="btn @PrimaryButtonClass" @onclick="OnPrimary">@PrimaryText</button>
    <button class="btn @SecondaryButtonClass" @onclick="OnSecondary">@SecondaryText</button>
</div>

@code {
    [Parameter] public string PrimaryText { get; set; } = "Primary";
    [Parameter] public string PrimaryButtonClass { get; set; } = "btn-primary btn-lg";
    [Parameter] public EventCallback OnPrimary { get; set; }

    [Parameter] public string SecondaryText { get; set; } = "Secondary";
    [Parameter] public string SecondaryButtonClass { get; set; } = "btn-outline-secondary btn-lg";
    [Parameter] public EventCallback OnSecondary { get; set; }
}
